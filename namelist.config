&modelname
    runid = 'fesom'
/

&timestep
    step_per_day = 32
    run_length = 62
    run_length_unit = 'y'
/

&clockinit
    timenew = 0.0
    daynew = 1
    yearnew = 1958
/

&paths
    meshpath = '.'
    climatedatapath = '/pool/data/AWICM/FESOM2/MESHES/INITIAL/phc3.0/'
    resultpath = '/work/ab0246/$USER/runtime/fesom2/'
/

&restart_log
    restart_length = 1
    restart_length_unit = 'y'
    raw_restart_length = 1
    raw_restart_length_unit = 'y'
    bin_restart_length = 1
    bin_restart_length_unit = 'y'
    logfile_outfreq = 960
/

&ale_def
    which_ale = 'zstar'
    use_partial_cell = .true.
/

&geometry
    cartesian = .false.
    fplane = .false.
    cyclic_length = 360
    rotated_grid = .true.
    force_rotation = .true.
    alphaeuler = 50.0
    betaeuler = 15.0
    gammaeuler = -90.0
/

&calendar
    include_fleapyear = .true.
/

&run_config
    use_ice = .true.
    use_cavity = .false.
    use_cavity_partial_cell = .false.
    use_floatice = .false.
    use_sw_pene = .true.
    flag_debug = .false.
    use_transit = .false.
/

&machine
    n_levels = 1
    n_part = 864
/

&icebergs
    use_icesheet_coupling = .false.
    ib_num = 1
    use_icebergs = .false.
    steps_per_ib_step = 8
    ib_async_mode = 0
/
